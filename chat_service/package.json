{
  "name": "chat_service",
  "version": "1.0.0",
  "description": "Chat service with realtime for message purpose",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon",
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node build/index.js",
    "pm2": "pm2 start build/index.js --name chat_service -o ./logs/pm2/access.log -e ./logs/pm2/error.log --log-date-format '%Y-%m-%d %H:%M:%S' --merge-logs",
    "production": "rimraf ./logs && npm run build && npm run pm2"
  },
  "author": "Tu Phan",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.2",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
